<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Explorer.Views.MapPage"
    Title="Map">

    <VerticalStackLayout
        Padding="20"
        Spacing="16">

        <Label
            Text="{Binding Name}"
            FontSize="24"
            FontAttributes="Bold"
            HorizontalTextAlignment="Center" />

        <Label
            Text="{Binding Address}"
            FontSize="14"
            TextColor="Gray"
            HorizontalTextAlignment="Center" />

        <Label
            Text="{Binding DistanceText}"
            FontSize="14"
            TextColor="Gray"
            HorizontalTextAlignment="Center" />

        <Button
            Text="Open in Maps"
            Command="{Binding OpenMapCommand}" />

    </VerticalStackLayout>
</ContentPage>